<%= render 'friends/lookup' %>

<% if @friendships.size > 0 %>
<table class="table table-striped">
    <thead>
        <tr>
            <th colspan="3" class="page-header">
                <h1>My friends</h1>
            </th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
          
        </tr>
    </thead>
    <tbody>
        <% @friendships.each do |friend| %>
        <tr>
            <td><%= friend.full_name %></td>
            <td><%= friend.email %></td>
            <td>
            <%= link_to "View profile", user_path(friend), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Remove friend', friendship_path(friend), method: :delete,
            data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></td>
            <% end %>
        </tr>
    </tbody>
</table>
<% else %>
<div class="row col-lg-12">
    <p class="lead">You don't have any friends yet, please add some!</p>
</div>
<% end %>